{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "es2015",
      "es2016"
    ],
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "typeRoots": [
      "./node_modules/@types",
      "src/types"
    ],
    "baseUrl": ".",
    "paths": {
      "Components/*": ["src/components/*"],
      "Layouts/*": ["src/layouts/*"],
      "Features/*": ["src/features/*"],
      "Images/*": ["src/images/*"]
    }
  },
}
